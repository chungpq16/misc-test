# OpenAI Configuration (default)
OPENAI_API_KEY=your-openai-api-key-here

# LLM Farm Configuration (alternative)
# Set USE_LLM_FARM=true to use LLM Farm instead of OpenAI
USE_LLM_FARM=false
LLM_FARM_API_KEY=your-llm-farm-api-key-here
LLM_FARM_URL=https://aoai-farm.bosch-temp.com/api/openai/deployments/askbosch-prod-farm-openai-gpt-4o-mini-2024-07-18/

# Microsoft Teams Webhook Configuration
# Legacy single webhook (deprecated - use specific webhooks below)
TEAMS_WEBHOOK_URL=https://your-organization.webhook.office.com/webhookb2/your-webhook-url

# Action Agent Webhook (for automated remediation notifications - green cards)
ACTION_AGENT_WEBHOOK_URL=https://your-organization.webhook.office.com/webhookb2/your-action-agent-webhook-url

# Communicator Agent Webhook (for escalation analysis notifications - severity-colored cards)
COMMUNICATOR_AGENT_WEBHOOK_URL=https://your-organization.webhook.office.com/webhookb2/your-communicator-agent-webhook-url

# RabbitMQ Configuration
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_QUEUE=alert-queue

# MCP Configuration
MCP_CONFIG_PATH=./mcp_servers_config.json
